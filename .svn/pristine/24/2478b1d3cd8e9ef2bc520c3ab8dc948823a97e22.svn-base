<template>
  <div class='line'>
    <svg style='width: 755px;height:765px'>
      <circle :cx="item.x" :cy="item.y" r="5" fill="white" stroke="red" v-for='item of spotArr'/>
      <line :x1="item.x1" :y1="item.y1" :x2="item.x2" :y2="item.y2" stroke="red" stroke-width="2" v-for='item of lineArr'/>
    </svg>
  </div>
</template>

<script>
  export default {
    name: "brokenLine4",

    props:['sign'],

    data(){
      return{
        spotArr:[],
        lineArr:[],
      }
    },

    mounted(){
      this.$nextTick(()=>{
        let arr = []
        this.sign.items.forEach(index=>{
          for(var k in index){
            var obj = {}
            index[k].forEach(item=>{
              item.VS_CODE == "T10500" ? obj.value = item.VS_VALUE : null
            })
            arr.push(obj)
          }
        })
        arr.forEach((item,index)=>{
          item.x = 18*(index+0.5)
          item.value == '' || item.value == null ? null : item.y = (200 - (item.value > 180 ? 180 : item.value)) / 4 * 15 + 15
          item.y ? this.spotArr.push(item) : null
        })
        this.spotArr.forEach((item,i)=>{
          if(i==this.spotArr.length-1){

          }else{
            this.lineArr.push({ x1 : item.x , y1 : item.y, x2 : this.spotArr[i+1].x , y2 : this.spotArr[i+1].y })
          }
        })
        window.spotArr4 = arr
      })
    }
  }
</script>

<style scoped lang='stylus'>
  .line
    position absolute
    left 93px
    top 78px
</style>
