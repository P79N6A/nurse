    &>>>.el-table__body-wrapper,&>>>.el-table__fixed-body-wrapper
      .cell
        padding 8px 4px
        .flex
          display flex
    &>>>.el-table__header-wrapper,&>>>.el-table__fixed-header-wrapper
      .cell
        font-size 12px
</style>
